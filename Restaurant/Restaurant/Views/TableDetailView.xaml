<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Restaurant.Views.TableDetailView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:syncfusion="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:tabView="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms"
    x:Name="Root"
    Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ChangeTableStatusCommand}" Text="Sửa trạng thái" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <tabView:SfTabView
                x:Name="tabView"
                BackgroundColor="WhiteSmoke"
                EnableSwiping="False"
                VisibleHeaderCount="2">
                <tabView:SfTabItem Title="Đặt món">
                    <tabView:SfTabItem.Content>
                        <StackLayout BackgroundColor="{x:StaticResource Backgroud}" VerticalOptions="StartAndExpand">
                            <Label Margin="8" Text="Thực đơn (VND)" />
                            <ActivityIndicator
                                HeightRequest="35"
                                IsRunning="{Binding SearchMonAn}"
                                IsVisible="{Binding SearchMonAn}"
                                WidthRequest="35" />
                            <SearchBar
                                Placeholder="Search dish"
                                SearchCommand="{Binding SearchCommand}"
                                Text="{Binding MonAn}" />
                            <ScrollView>
                                <StackLayout BindableLayout.ItemsSource="{Binding Tests}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout Spacing="10">
                                                <Frame
                                                    Margin="9,3,9,3"
                                                    CornerRadius="5"
                                                    HasShadow="True">
                                                    <StackLayout Orientation="Horizontal">
                                                        <StackLayout.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding BindingContext.DetailCommand, Source={x:Reference Root}}" CommandParameter="{Binding .}" />
                                                        </StackLayout.GestureRecognizers>
                                                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Vertical">
                                                            <Label Text="{Binding Name}" />
                                                            <Label Text="{Binding Price}" />
                                                        </StackLayout>
                                                        <StackLayout HorizontalOptions="EndAndExpand" Orientation="Vertical">
                                                            <Label>
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <Span Text="Số lượng: " />
                                                                        <Span Text="{Binding Source={x:Reference stepper}, Path=Value}" />
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>
                                                            <Stepper
                                                                x:Name="stepper"
                                                                Minimum="0"
                                                                ValueChanged="stepper_ValueChanged"
                                                                Value="{Binding SoLuong, Mode=TwoWay}" />
                                                        </StackLayout>
                                                    </StackLayout>
                                                </Frame>
                                            </StackLayout>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </StackLayout>
                            </ScrollView>

                            <AbsoluteLayout>
                                <Button
                                    Margin="0,0,0,8"
                                    AbsoluteLayout.LayoutBounds=".5,.6,70,90"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    BackgroundColor="{x:StaticResource FacebookBlue}"
                                    Command="{Binding SubmitCommand}"
                                    CornerRadius="5"
                                    HorizontalOptions="Center"
                                    Text="Submit"
                                    VerticalOptions="End" />
                                <!--<ImageButton
                                    AbsoluteLayout.LayoutBounds=".9,.5,60,80"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    BackgroundColor="Transparent"
                                    Command="{Binding FABCommand}"
                                    CommandParameter="{Binding Title, Source={x:Reference Root}}"
                                    HeightRequest="70"
                                    Source="fab.png"
                                    WidthRequest="70" />-->
                            </AbsoluteLayout>
                        </StackLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
                <tabView:SfTabItem Title="Món đã đặt">
                    <tabView:SfTabItem.Content>
                        <StackLayout Margin="10,20,10,0" BackgroundColor="{x:StaticResource Backgroud}">
                            <StackLayout>
                                <Picker ItemsSource="{Binding Filters}" SelectedIndex="{Binding SelectedIndex}" />
                                <ScrollView>
                                    <StackLayout BindableLayout.ItemsSource="{Binding OrderedItems}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout Spacing="5">
                                                    <StackLayout.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding BindingContext.ViewDishCommand, Source={x:Reference Root}}" CommandParameter="{Binding .}" />
                                                    </StackLayout.GestureRecognizers>
                                                    <Frame CornerRadius="5">
                                                        <StackLayout Orientation="Horizontal">
                                                            <StackLayout HorizontalOptions="StartAndExpand">
                                                                <Label Text="{Binding NameDish}" />
                                                                <Label Text="{Binding Status}" />
                                                            </StackLayout>
                                                            <Image
                                                                Aspect="AspectFill"
                                                                HeightRequest="30"
                                                                HorizontalOptions="CenterAndExpand"
                                                                IsVisible="False"
                                                                Source="{Binding ImageUrl}"
                                                                WidthRequest="30" />
                                                            <Button
                                                                BackgroundColor="{x:StaticResource FacebookBlue}"
                                                                Command="{Binding BindingContext.DeleteDetailCommand, Source={x:Reference Root}}"
                                                                CommandParameter="{Binding .}"
                                                                CornerRadius="3"
                                                                HorizontalOptions="EndAndExpand"
                                                                IsVisible="{Binding Status, Converter={x:StaticResource ShowDeleteButtonConverter}}"
                                                                Text="Xóa" />
                                                        </StackLayout>
                                                    </Frame>
                                                </StackLayout>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </StackLayout>
                                </ScrollView>
                                <StackLayout>
                                    <Button
                                        Margin="5"
                                        BackgroundColor="{x:StaticResource FacebookBlue}"
                                        Command="{Binding PurchaseCommand}"
                                        CornerRadius="5"
                                        HorizontalOptions="Center"
                                        Text="Yêu cầu thanh toán"
                                        VerticalOptions="End" />
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
            </tabView:SfTabView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>