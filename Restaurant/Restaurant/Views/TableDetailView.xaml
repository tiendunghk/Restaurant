<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Restaurant.Views.TableDetailView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:syncfusion="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:tabView="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms"
    x:Name="Root"
    Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <tabView:SfTabView BackgroundColor="WhiteSmoke" VisibleHeaderCount="2">
                <tabView:SfTabItem Title="Trạng thái">
                    <tabView:SfTabItem.Content>
                        <StackLayout Margin="10,20,10,0" BackgroundColor="{x:StaticResource Backgroud}">
                            <StackLayout>
                                <syncfusion:SfRadioGroup Margin="20">
                                    <syncfusion:SfRadioButton
                                        x:Name="radioButton"
                                        FontFamily="{x:StaticResource Avo}"
                                        Text="Occupied" />
                                    <syncfusion:SfRadioButton
                                        x:Name="radioButton1"
                                        FontFamily="{x:StaticResource Avo}"
                                        Text="Dirty" />
                                    <syncfusion:SfRadioButton
                                        x:Name="radioButton2"
                                        FontFamily="{x:StaticResource Avo}"
                                        Text="Clean" />
                                </syncfusion:SfRadioGroup>
                                <Button
                                    Margin="20,20,20,20"
                                    BackgroundColor="{x:StaticResource FacebookBlue}"
                                    CornerRadius="3"
                                    HorizontalOptions="Center"
                                    Text="Submit"
                                    VerticalOptions="Center" />
                            </StackLayout>
                        </StackLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
                <tabView:SfTabItem Title="Đặt món">
                    <tabView:SfTabItem.Content>
                        <StackLayout BackgroundColor="{x:StaticResource Backgroud}" VerticalOptions="StartAndExpand">
                            <SearchBar Placeholder="Search dish" />
                            <ScrollView>
                                <StackLayout BindableLayout.ItemsSource="{Binding Tests}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout Spacing="10">
                                                <Frame
                                                    Margin="9,3,9,3"
                                                    CornerRadius="5"
                                                    HasShadow="True">
                                                    <StackLayout Orientation="Horizontal">
                                                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Vertical">
                                                            <Label Text="{Binding Name}" />
                                                            <Label Text="{Binding Price}" />
                                                        </StackLayout>
                                                        <Image
                                                            Aspect="AspectFill"
                                                            HeightRequest="60"
                                                            HorizontalOptions="CenterAndExpand"
                                                            Source="com_tam"
                                                            WidthRequest="60" />
                                                        <StackLayout HorizontalOptions="EndAndExpand" Orientation="Vertical">
                                                            <Label>
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <Span Text="Số lượng: " />
                                                                        <Span Text="{Binding Source={x:Reference stepper}, Path=Value}" />
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>
                                                            <Stepper
                                                                x:Name="stepper"
                                                                Maximum="10"
                                                                Minimum="0" />
                                                        </StackLayout>
                                                    </StackLayout>
                                                </Frame>
                                            </StackLayout>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </StackLayout>
                            </ScrollView>

                            <AbsoluteLayout>
                                <Button
                                    Margin="0,0,0,8"
                                    AbsoluteLayout.LayoutBounds=".5,.6,70,90"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    BackgroundColor="{x:StaticResource FacebookBlue}"
                                    CornerRadius="5"
                                    HorizontalOptions="Center"
                                    Text="Submit"
                                    VerticalOptions="End" />
                                <ImageButton
                                    AbsoluteLayout.LayoutBounds=".9,.5,60,80"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    BackgroundColor="Transparent"
                                    Command="{Binding FABCommand}"
                                    CommandParameter="{Binding Title, Source={x:Reference Root}}"
                                    HeightRequest="70"
                                    Source="fab.png"
                                    WidthRequest="70" />
                            </AbsoluteLayout>
                        </StackLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
            </tabView:SfTabView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>